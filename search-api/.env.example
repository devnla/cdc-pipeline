# OpenSearch Configuration
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USE_SSL=false
OPENSEARCH_VERIFY_CERTS=false
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_POSTS=social.posts
KAFKA_TOPIC_USERS=social.users
KAFKA_TOPIC_COMMENTS=social.comments
KAFKA_CONSUMER_GROUP=search-api-consumer

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Search Configuration
SEARCH_DEFAULT_SIZE=20
SEARCH_MAX_SIZE=100
AUTOCOMPLETE_MIN_CHARS=2
AUTOCOMPLETE_MAX_SUGGESTIONS=10

# Cache Configuration
CACHE_TTL=300
CACHE_ENABLED=true

# Analytics Configuration
ANALYTICS_ENABLED=true
TRENDING_WINDOW_HOURS=24
TRENDING_MIN_ENGAGEMENT=10

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60